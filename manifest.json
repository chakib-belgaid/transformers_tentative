{
    "manifest_version": 3,
    "name": "Word Counter and Vowel Replacer",
    "version": "1.0",
    "description": "Counts words and replaces vowels with numbers.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon.png",
            "48": "icons/icon.png",
            "128": "icons/icon.png"
        }
    }
}